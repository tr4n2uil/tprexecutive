/* quiz-list styles */.quiz-list { width: 100%; white-space: normal; border-collapse:collapse; line-height:1.2em; }.quiz-list th { padding: 5px; color: black; text-align: left; font-size: 16px; }.quiz-list tr { /*background: #ECF3F7; border-bottom: 1px solid #CCCCCC;*/ }.quiz-list td { padding: 2px 5px; vertical-align: top; }.quiz-list>tbody>tr>td:first-child { width: 35px; text-align: right; font-weight: bold; font-size: small; }/*.quiz-list>tbody>tr>td:last-child { width: 90%; }*/.quiz-list .title { font-weight: bold; font-size: 16px; }.quiz-list .desc { font-style: normal !important; color: gray; font-size: 12px; }.quiz-list .pst-btn { border: 1px solid #CCCCCC; font-size: 1em; padding: 2px 3px; }.quiz-list .post-comments { margin: 0.5em 2em 1em 0em; }.quiz-list .midtile { padding: 5px; }.quiz-list .tile { padding: 5px; }.quiz-list a { color: darkblue !important; }.quiz-list a:hover { color: blue !important; }