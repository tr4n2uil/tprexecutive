/* server portal styles */#server-portal { }#server-portal .small { font-size: 11px; color: gray; }#server-portal .pad { padding: 0 10px; }#server-portal li:hover .small { color: white; }#server-portal .total { font-size: 2.5em; color: green; line-height: 1em; }#server-portal li:hover .total { color: white; }#server-portal .timer { font-size: 1.2em; color: green; line-height: 1em; }#server-portal .timer .small { font-size: 9px; color: green; }#server-portal li:hover .timer { color: white; }.twitter-share-button { padding-left: 10px; }/* event portal styles */.event-portal { }.event-portal .small { font-size: 11px; color: gray; }.event-portal .pad { padding: 0 10px; }.event-portal li:hover .small { color: white; }.event-portal .total { font-size: 2.5em; color: green; line-height: 1em; }.event-portal li:hover .total { color: white; }.event-portal .timer { font-size: 1.2em; color: green; line-height: 1em; }.event-portal .timer .small { font-size: 9px; color: green; }.event-portal li:hover .timer { color: white; }